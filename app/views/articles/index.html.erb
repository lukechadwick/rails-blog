<h1>Listing all posts</h1>
<% @articles.each do |article| %>
<div class="row">
   <div class="col-sm-8 offset-sm-2">
      <div class="card card-body bg-light">
         <div class='article-title center'>
            <%= link_to  article.title, article_path(article) %>
         </div>
         <div class='article-body'>
            <%= truncate(article.description, length: 200) %>
         </div>
         <div class="center">    
            <br>
            <%= link_to  "Edit this post", edit_article_path(article), class: 'btn btn-primary btn-xs' %>
            |
            <%= link_to  "Delete this post", article_path(article), method: :delete, data: {confirm: 'Are you sure you want to delete the article'}, class: 'btn btn-danger btn-xs' %>
         </div>
      </div>
   </div>
</div>
<%end%>